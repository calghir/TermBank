<GridPane alignment = "CENTER" hgap = "10.0" vgap = "10.0"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="termbank.view.BankSheetController">
	<padding>
		<Insets bottom = "10.0" left = "10.0" right = "10.0" top = "10.0"/>
	</padding>
	<HBox spacing = "150" GridPane.columnIndex = "0" GridPane.rowIndex = "0">
		<Label fx:id = "currentGroup" style = "-fx-font: NORMAL 20 Tahoma;" text = "All Groups"/>
		<HBox spacing = "10">
		<padding><Insets top = "0" right = "0" bottom = "0" left = "100"/></padding>
		<ChoiceBox fx:id = "viewGroup" prefWidth = "100"/>
		<Button text = "OK" onAction = "#updateDataView"/>
		</HBox>
	</HBox>
	<TableView fx:id = "tableView" GridPane.columnIndex = "0" GridPane.rowIndex = "1" prefWidth = "500">
		<columns>
			<TableColumn fx:id = "termColumn" text = "Term" prefWidth = "250">
				<cellValueFactory><PropertyValueFactory property = "term"/>
				</cellValueFactory>
			</TableColumn>
			<TableColumn fx:id = "definitionColumn" text = "Definition" prefWidth = "250">
			<cellValueFactory><PropertyValueFactory property = "definition"/>
			</cellValueFactory>
			</TableColumn>
		</columns>
	</TableView>
	<VBox spacing = "10" alignment = "top_left" GridPane.columnIndex = "0"
	 	GridPane.rowIndex = "2">
	 	<TextField fx:id = "termField" promptText = "Add Term"/>
	 	<TextArea fx:id = "definitionField" promptText = "Add Definition" prefHeight = "250"/>
	</VBox>
	<HBox spacing = "50" GridPane.columnIndex = "0" GridPane.rowIndex = "3">
		<ChoiceBox fx:id = "selectGroup" prefWidth = "175"/>
		<TextField fx:id = "createGroupField" promptText = "Type new group name" prefWidth = "200"/>
		<Button text = "Add Term" onAction = "#addData" prefWidth = "150"/>
	</HBox>
	
	
</GridPane>







